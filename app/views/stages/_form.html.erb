<h1>Stage:</h1>
<%= form_for @stage do |f| %>

  <div class="required-field">
    <%= f.label :stage_name, "Stage Name" %>
    <%= f.text_field :stage_name %>
  </div>

  <div class="non-required-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="required-field">
    <%= f.label :completion_status, "Completion Title" %>
    <%= f.text_field :completion_status %>
  </div>
  <%= f.submit "Submit Stage", class: 'button' %>
<% end %>
